@model ContactBook

    <div class="card" style="width: 45%;">
    <img src="@Url.Content("~/Uploads/" +Model.FileName)" alt="Category img" width="250" height="250" />

        <div class="card-body">
            <h5 class="card-title" style="font-size:45px;">Name : @Model.FirstName @Model.LastName</h5>
        <p class="card-subtitle mb-2 text-body-secondary" style="font-size:25px;">Phone Number : @Model.PhoneNumber</p>
        <p class="card-subtitle text-body-secondary" style="font-size:20px;">Email Id : @Model.EmailId</p>
        <p class="card-text" style="font-size:20px;">Address : @Model.Address</p>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ContactId">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.ContactId">Delete</a>
        <a class="btn btn-secondary" asp-action="Index">Back To List</a>
        </div>
    </div>
